<Window x:Class="SymmetricDS_Config_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SymmetricDS_Config_Generator"
        mc:Ignorable="d"
        Title="SymmetricDS Config Generator" Height="599" Width="865" Icon="loable tech logo.ico"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"     MinWidth="350"    
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <materialDesign:ColorZone
            Mode="PrimaryMid"
            Padding="16">
            <DockPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <TextBlock Name="title"
                        VerticalAlignment="Center" Text="SymmetricDS Config Generator"
                        Margin="16 0 0 0" FontSize="20">
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
        <Grid Margin="5,53,5,47">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" ResizeDirection="Columns"/>
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" ResizeDirection="Columns"/>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" ResizeDirection="Rows"/>
                <GroupBox Grid.Row="0" Header="Engines" Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="0,10,0,0">
                    <Grid>
                        <ListBox Name="lstEngines" Margin="0,0,0,10">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuEditEngine" Header="Edit Engine" Click="MnuEditEngine_Click"/>
                                    <MenuItem Name="mnuRemoveEngine" Header="Remove Engine" Click="MnuRemoveEngine_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>                            
                        </ListBox>
                        <Button x:Name="btnAddEngine" Margin="0,0,10,10" 
                            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                            ToolTip="Add New Engine" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="BtnAddEngine_Click">
                            <materialDesign:PackIcon Kind="Add" Height="24" Width="24" />
                        </Button>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="2" Header="Routers" Style="{DynamicResource MaterialDesignCardGroupBox}">
                    <Grid>
                        <ListBox Name="lstRouters" Margin="0,0,0,10">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuEditRouter" Header="Edit Router" Click="MnuEditRouter_Click"/>
                                    <MenuItem Name="mnuRemoveRouter" Header="Remove Router" Click="MnuRemoveRouter_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <Button x:Name="btnAddRouter" Margin="0,0,10,10" 
                            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                            ToolTip="Add New Router" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="BtnAddRouter_Click">
                            <materialDesign:PackIcon Kind="Add" Height="24" Width="24" />
                        </Button>
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" ResizeDirection="Rows"/>
                <GroupBox Grid.Row="0" Header="Node Groups" Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="0,10,0,0">
                    <Grid>
                        <ListBox Name="lstNodeGroups" Margin="0,0,0,10">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuEditNodeGroup" Header="Edit Node Group" Click="MnuEditNodeGroup_Click"/>
                                    <MenuItem Name="mnuRemoveNodeGroup" Header="Remove Node Group" Click="MnuRemoveNodeGroup_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <Button x:Name="btnAddNodeGroup" Margin="0,0,10,10" 
                            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                            ToolTip="Add New Node Group" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="BtnAddNodeGroup_Click">
                            <materialDesign:PackIcon Kind="Add" Height="24" Width="24" />
                        </Button>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="2" Header="Node Group Links" Style="{DynamicResource MaterialDesignCardGroupBox}">
                    <Grid>
                        <ListBox Name="lstNodeGroupLinks" Margin="0,0,0,10">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuEditNodeGroupLink" Header="Edit Group Link" Click="MnuEditNodeGroupLink_Click"/>
                                    <MenuItem Name="mnuRemoveNodeGroupLink" Header="Remove Group Link" Click="MnuRemoveNodeGroupLink_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <Button x:Name="btnNodeGroupLink" Margin="0,0,10,10" 
                            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                            ToolTip="Add New Node Group Link" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="BtnNodeGroupLink_Click">
                            <materialDesign:PackIcon Kind="Add" Height="24" Width="24" />
                        </Button>
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" ResizeDirection="Rows"/>
                <GroupBox Grid.Row="0" Header="Channels" Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="0,10,0,0">
                    <Grid>
                        <ListBox Name="lstChannels" Margin="0,0,0,10">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuEditChannel" Header="Edit Channel" Click="MnuEditChannel_Click"/>
                                    <MenuItem Name="mnuRemoveChannel" Header="Remove Channel" Click="MnuRemoveChannel_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <Button x:Name="btnAddChannel" Margin="0,0,10,10" 
                            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                            ToolTip="Add New Channel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="BtnAddChannel_Click">
                            <materialDesign:PackIcon Kind="Add" Height="24" Width="24" />
                        </Button>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="2" Header="Triggers" Style="{DynamicResource MaterialDesignCardGroupBox}">
                    <Grid>
                        <ListBox Name="lstTriggers" Margin="0,0,0,10">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuEditTrigger" Header="Edit Trigger" Click="MnuEditTrigger_Click"/>
                                    <MenuItem Name="mnuRemoveTrigger" Header="Remove Trigger" Click="MnuRemoveTrigger_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <Button x:Name="btnAddTrigger" Margin="0,0,10,10" 
                            Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                            ToolTip="Add New Trigget" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="BtnAddTrigger_Click">
                            <materialDesign:PackIcon Kind="Add" Height="24" Width="24" />
                        </Button>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
        <Button x:Name="btnGenerate" Content="Generate Config Files" Margin="0,0,10,10" Height="32" HorizontalAlignment="Right" Width="183" VerticalAlignment="Bottom" Click="BtnGenerate_Click"/>
    </Grid>
</Window>
